{
  "name": "arve",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "push": "cross-var git add . && git commit -m \"$MSG\" && git push"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.arve.app",
    "productName": "Arve",
    "files": [
      "dist/",
      "dist-electron/",
      "node_modules/"
    ],
    "directories": {
      "buildResources": "src/assets/icons"
    },
    "win": {
      "icon": "src/assets/icons/arve_icon.ico",
      "target": [
        "nsis"
      ],
      "publish": {
        "provider": "github",
        "repo": "Arve-app",
        "owner": "damir-zuy",
        "releaseType": "release"
      }
    },
    "mac": {
      "icon": "src/assets/icons/arve_icon.icns",
      "target": [
        "dmg"
      ],
      "publish": {
        "provider": "github",
        "repo": "Arve-app",
        "owner": "damir-zuy",
        "releaseType": "release"
      }
    },
    "linux": {
      "icon": "src/assets/icons/arve_icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "publish": {
        "provider": "github",
        "repo": "Arve-app",
        "owner": "damir-zuy",
        "releaseType": "release"
      }
    }
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "express": "^4.21.2",
    "framer-motion": "^12.6.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.0",
    "motion": "^12.6.0",
    "multer": "^1.4.5-lts.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@svgr/rollup": "^8.1.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-var": "^1.1.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.1.9",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
